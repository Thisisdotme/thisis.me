<metal:index use-macro="load: main_structure.html">

	<div id="timeline" data-role="page" data-theme="${theme}" metal:fill-slot="page_content">
	
		<div data-role="header" data-theme="${theme}" data-position="fixed" >
			<a href="/" data-role="button" data-icon="arrow-l" data-iconpos="notext">Authors</a>
			<h1>thisis.me: ${author_name}</h1>
			<a href="/${author_name}/features" data-role="button" data-icon="grid" data-iconpos="notext" data-transition="flip">Features</a>
		</div><!-- /header -->
	
		<!-- ??? migrate CSS to style sheet -->
		<div data-role="content" style="padding:0;margin-top:0;top:42px;position:absolute;bottom:0;width:100%;">
			<div id="wrapper">
				<div id="scroller">
					<div id="pullDown">
						<span class="pullDownIcon"></span><span class="pullDownLabel">Pull down to refresh...</span>
					</div>
					<div class="mi-content" style="padding:15px;">
					</div>
					<div id="pullUp">
						<span class="pullUpIcon"></span><span class="pullUpLabel">Pull up to refresh...</span>
					</div>
				</div>
			</div>
		</div>

	</div><!-- /page -->

</metal:index>
